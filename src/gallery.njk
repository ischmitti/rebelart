layout: 'base.njk'
title: Gallery
---


<section id="gallery">
    <div class="hero-gallery">
        </div>
    <div class="container-fluid">
            <div class="row" data-masonry='{"percentPosition": true }'>
        {%- for post in collections.post | reverse-%}
                        <div class="col-sm-12 col-md-6 col-lg-4 image-container">
                            <a class="image-link" href="{{ post.url }}">
                          <img class="gallery-image" src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}">
                                </a>
                        </div>
        {%- endfor -%}
            </div>
        </div>
</section>